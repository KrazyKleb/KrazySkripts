options:
    rvitem: paper named "&e&lPERMISSION VOUCHER" with lore "&ePermission &7» &f%arg-2%"

on load:
    set {ks::rvenabled} to true

on unload:
    clear {ks::rvenabled}

on right click with {@rvitem}:
    if {ks::rvplugin} is LuckPerms:
        set {_c} to "lp user %player% parent set %rank%"
    else:
        send "%{ks::servername}% &7» &cError! Your Permission plugin isn't supported yet! Consider installing LuckPerms as More Permission plugins will be added soon"
        send "&c&lAnd if you messed with the code or changed it to something random, Don't."
    set {_p} to (2nd element of ((1st element of uncolored lore of event-item) split at " » "))
    replace all "%rank%" in {_c} with {_p}
    console command {_c}
    remove 1 from tool's item amount
    send "%{ks::servername}% &7» &aYou successfully claimed this voucher!"

command /rankvoucher <player> <text>:
    aliases: /rv, /rvoucher
    permission: ks.rankvoucher.give, ks.*
    permission message: %{ks::permmsg}%
    usage: &cUsage: /rankvoucher <player> <rank>
    trigger:
        send "%{ks::servername}% &7» &aGiven a voucher with rank &e%arg-2% &ato &e%arg-1%&a." to player
        send "%{ks::servername}% &7» &aYou recieved a voucher with rank &e%arg-2%&a." to arg-1
        give arg-1 paper named "&e&lRANK VOUCHER" with lore "&eRank &7» &f%arg-2%"
        set {@rvitem} to paper named "&e&lRANK VOUCHER" with lore "&eRank &7» &f%arg-2%"